<div class="container-fluid">		
<% Client.all.each_slice(2) do |clients| %>
	<div class="row-fluid">
		<% clients.each do |client| %>
			<div class="span6">
				<div class="media bordered">
					<b><%= client.name %></b>
					<div class="pull-left"><img width='80' src="<%= client.logo_url %>"></div>
					<div class="media-body">
						<% client.web_sites.all.each do |website| %>
							<!-- These are the websites and their labels -->
							<div class="row-fluid">
								<div class="span6">
									<a href="<%= website.url %>"><%= website.host.to_s.gsub(/^www\./,'') %><%= website.path %></a>
								</div>
								<% status = find_status(website) %>
								<div class="span2">
									<span class='pull-right'>
										<% if status %>
											<% if /OK/.match(status['service_status']) %>
												<% status_output = HTMLEntities.new.decode(status['service_plugin_output']) %>
												<% time_match = /([.0-9]+) second/.match(status_output) %>
												<span class="label label-success"><%= status['service_status'] %> - <%= (time_match[1].to_f*1000).to_i %>ms</span>
											<% elsif /CRITICAL/.match(status['service_status'])%>
												<span class="label label-important"><%= status['service_status'] %></span>
											<% else %>
												<span class="label label-default"><%= status['service_status'] %></span>
											<% end %>
										<% else %>
											<span class="label label-warning">Not Monitored</span>
										<% end %>
									</span>
								</div>
								<!-- These are the charts -->
								<div class="span4">
									<div id="chart_<%= h(website.url) %>" style="width: 100px; height: 50px; border: 1px solid red"></div>
									<script type="text/javascript">
										$(function () {
		    								$(document).ready(function() {
		        								drawchart("chart_<%= h(website.url) %>");
		    								});
										});
									</script>
								</div>
							</div>
						<% end %>
					</div>
				</div>
			</div>
		<% end %>
	</div>
<% end %>
</div>