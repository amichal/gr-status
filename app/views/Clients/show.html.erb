<h2>Websites</h2>
<div class='container-fluid'>
	<% @client.web_sites.all.each_slice(2) do |websites|%>
		<div class='row-fluid'>
			<% websites.each do |website| %>
				<div class='span6'>
					<h3><a href='<%= website.url %>'><%= website.url %></a></h3>
					<h4>Response Time</h4>
					<div id="chart_<%= h(website.url) %>" style="width: 100px; height: 50px; border: 1px solid red">
						<script type="text/javascript">
							$(function () {
								$(document).ready(function() {
									bigchart("chart_<%= h(website.url) %>", 
										<%= website.response_time_ms_1_minute_interval.to_json.html_safe %>
									);
								});
							});
						</script>
					</div>
					<h4>Requests per Minute</h4>
