<ul class='breadcrumb'>
<li><a href ='../dashboard'>Dashboard</a><span class='divider'>/</span></li>
<li class='active'><%= @client.name %></li>
</ul>
<h1><%= @client.name %></h1>
<div class='container-fluid'>
	<div class='row-fluid'>
		<div class='span1'><img width='80' src="<%= @client.logo_url %>"></div>
		<div class='span11'>
			<p><%= @client.description %></p>
		</div>
	</div>
	<div class='row-fluid'>
		<div class='span4'><p><strong>Hours Worked</strong>: <%= @client.hours %></p></div>
		<div class='span4'><p><strong>Issues resolved</strong>: <%= @client.hours/2 %></p></div>
		<div class='span4'><p><strong>Sandwiches eaten</strong>: <%= @client.hours/4 %></p></div>
	</div>
</div>
<div class='container-fluid'>
	<% @client.web_sites.all.each_slice(1) do |websites|%>
		<% websites.each do |website| %>
			<h3><a href='<%= website.url %>'><%= website.url %></a></h3>
			<div class='row-fluid'>
				<div class='span3'>
					<h4>Response Time</h4>
					<div class='big_chart' id="rtime_<%= h(website.url) %>" 
						style="width: 300px; height: 150px; border: 1px solid red">
						<script type="text/javascript">
							$(function () {
								$(document).ready(function() {
									bigchart("rtime_<%= h(website.url) %>",
										<% if stuff=find_performance_data(website, 'time') %> 
										<%= stuff.to_json.html_safe %>
										<% end %>,
										'Response Time (seconds)'
									);
								});
							});
						</script>
					</div>
				</div>
				<div class='span3'>
					<h4>Requests per Day</h4>
					<% if get_pageviews_by_day(website) %>
						<div class='big_chart' id="rpm_<%= h(website.url) %>" 
							style="width: 300px; height: 150px; border: 1px solid red">
							<script type="text/javascript">
								$(function () {
									$(document).ready(function() {
										bigchart("rpm_<%= h(website.url) %>", 
											<%= get_pageviews_by_day(website).to_json.html_safe %>,
											'Views'
										);
									});
								});
							</script>
						</div>
					<% else %>
						<p>no pageview data found</p>
					<%end %>
				</div>
				<div class='span3'>
					<h4>Users</h4>
					<% if get_visitors_by_day(website) %>
						<div class='big_chart' id="users_<%= h(website.url) %>" 
							style="width: 300px; height: 150px; border: 1px solid red">
							<script type="text/javascript">
								$(function () {
									$(document).ready(function() {
										bigchart("users_<%= h(website.url) %>", 
											<%= get_visitors_by_day(website).to_json.html_safe %>,
											'Users'
										);
									});
								});
							</script>
						</div>
					<% else %>
						<p>no user data found</p>
					<% end %>
				</div>
				<div class='span3'>
					<h4>Recent Deployments</h4>
					<div>
						<ol>
							<li>Deployment 1</li>
							<li>Deployment 2</li>
							<li>Deployment 3</li>
							<li>Deployment 4</li>
						</ol>
					</div>
				</div>
			</div>
			<hr>
		<% end%>
	<% end %>
</div>